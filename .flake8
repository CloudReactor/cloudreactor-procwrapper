[flake8]
exclude = docs
max-line-length = 88

# We use 2 indents for continuation lines, so:
# E126 continuation line over-indented for hanging indent
# E127 continuation line over-indented for visual indent
# E128 continuation line over-indented for visual indent
#
# black puts whitespace around ':' in ranges, so
# E203 whitespace before ':'
ignore = E126,E127,E128,E203,E501,W503
